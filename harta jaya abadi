  <script>
    // set year
    document.getElementById('year').innerText = new Date().getFullYear();

    // navbar color change on scroll
    const nav = document.getElementById('navbar');
    window.addEventListener('scroll', () => {
      if(window.scrollY > 24) nav.classList.add('scrolled');
      else nav.classList.remove('scrolled');
    });

    // reveal sections
    const sections = document.querySelectorAll('.section');
    const io = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if(e.isIntersecting) e.target.classList.add('visible');
      });
    }, {threshold: 0.12});
    sections.forEach(s => io.observe(s));

    // image zoom overlay
    document.querySelectorAll('.gallery img, .card img, .hero-big img, .hero-small img').forEach(img=>{
      img.style.cursor = 'zoom-in';
      img.addEventListener('click', () => {
        const overlay = document.createElement('div');
        overlay.style.position='fixed';
        overlay.style.inset=0;
        overlay.style.background='rgba(1,6,16,0.88)';
        overlay.style.display='flex';
        overlay.style.alignItems='center';
        overlay.style.justifyContent='center';
        overlay.style.zIndex=9999;
        overlay.addEventListener('click', ()=> overlay.remove());

        const big = document.createElement('img');
        big.src = img.src;
        big.style.maxWidth='92%';
        big.style.maxHeight='92%';
        big.style.borderRadius='10px';
        big.style.boxShadow='0 20px 50px rgba(0,0,0,0.6)';
        overlay.appendChild(big);
        document.body.appendChild(overlay);
      });
    });

    // smooth scroll for nav anchors
    document.querySelectorAll('.nav-links a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (e) => {
        e.preventDefault();
        const id = a.getAttribute('href');
        const el = document.querySelector(id);
        if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
      });
    });
  </script>
